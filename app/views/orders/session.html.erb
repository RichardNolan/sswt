<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="float-right">Total cost = <%= currency(@total) %></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            A form for the cutomer's details is to go here.
        </div>
    </div>
    <div class="row">

    <% 
        @order.each do |item| 
            product = Product.find(item['id']) 
            src = primary_product_image(item['id']) 
    %>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">
                <%= link_to product do %>
                    <img class="card-img-top" src="<%= src %>" alt="<%= product.name %>">
                <% end %>
                <div class="card-body">
                    <h4 class="card-title">
                    <%= link_to product.name, product %>
                    </h4>
                    <p><%= item['q'].to_s + " x " + currency(item['p']) %></p>
                    <h5 class="float-right"><%= currency(item['q'] * item['p']) %></h5>
                </div>
                <div class="card-footer">
                    <small class="text-muted"><%= product.producer.name %></small>
                </div>
                </div>
            </div>
    <%  end %>
    </div>
</div>