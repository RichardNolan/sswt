<p id="notice"><%= notice %></p>

<h1>Product Likes</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_likes.each do |product_like| %>
      <tr>
        <td><%= product_like.product_id %></td>
        <td><%= product_like.customer_id %></td>
        <td><%= link_to 'Show', product_like %></td>
        <td><%= link_to 'Edit', edit_product_like_path(product_like) %></td>
        <td><%= link_to 'Destroy', product_like, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Like', new_product_like_path %>
