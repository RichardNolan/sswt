<!-- Categories -->
<div class="container">


  <% 
  # Only Admin can view this 
  if(admin_signed_in?) %>
    <div class="admin-controls">
      <h5>Administration tools</h5>
      <hr>
      <%= link_to "Create Category", new_category_path, class: 'btn btn-sm btn-primary' %>
    </div>
  <% end %>


  <div class="row">
    <div class="col-lg-12">
      <h2>Categories</h2>
    </div>
  </div>

  <div class="row">

    <!-- Categories -->
    <% categoryList.each do |category| %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <%= link_to category do %>
          <img class="card-img-top" src="http://via.placeholder.com/700x400" alt="<%= category.name %>">
        <% end %>
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to category.name, category %>
          </h4>          
          <p class="card-text"><%= category.description %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= link_to pluralize(category.products.count, "product"), "/products/category/#{category.id}", class:'btn btn-primary btn-sm' %></small>
          <% if admin_signed_in? %>
            <%= link_to "Edit", edit_category_path(category), class: 'btn btn-warning btn-sm' %>
            
            <%= link_to 'Delete', category, class: 'btn btn-warning btn-sm', method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %>
            
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

</div>
<!-- End Categories -->