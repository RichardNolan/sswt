<!-- Page Content -->
    <div class="container">

      <div class="row">

        <% if @category %>
        <div class="col-lg-12">
          <h5><%= @category.name %></h5>
          <p><%= @category.description %></p>
        </div>
        <% end %>

        <div class="col-lg-3">
          
          <h4 class="my-4">Categories</h4>
          <div class="list-group">
            <% categoryList.each do |category| %>          
              <%= link_to category.name, "/products/category/#{category.id}", class: "list-group-item #{'active' if @category && @category.id==category.id}" %>
            <% end %>
          </div>

          <h4 class="my-4">Search</h4>
          <div class="">
            
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Enter keyword" id="keyword" value="<%= @keyword %>">
            </div>
            <div class="form-group">
              <button class="btn btn-primary" onclick="
                window.location.href='/products/search/'+$('#keyword').val();
              ">Search</button>
            </div>
          
          </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active">
                <img class="d-block img-fluid" src="http://lorempixel.com/900/350/food/" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="http://lorempixel.com/900/350/food/" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="http://lorempixel.com/900/400/food/" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

          <!-- Products -->
          <div class="row">

            <!-- Product -->
            <% @products.each do |product| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <%= link_to product do %>
                  <img class="card-img-top" src="http://lorempixel.com/700/400/food/" alt="<%= product.name %>">
                <% end %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to product.name, product %>
                  </h4>
                  <h5>&euro; <%= product.price %></h5>
                  <p class="card-text"><%= product.description %></p>
                  <%= render partial: '/products/likes', locals:{product: product}%>
                </div>
                <div class="card-footer">
                  <small class="text-muted"><%= product.producer.name %></small>
                </div>
              </div>
            </div>
            <% end %>
            <!-- END Product -->

          </div>
          <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

