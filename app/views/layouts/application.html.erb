<!DOCTYPE html>
<html>
  <head>
    <title>SSWTProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
    
  </head>
<%= render 'layouts/header' %>
<%= render 'layouts/navbar' %>
<%= render 'layouts/footer' %>


  <body>
 
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/" class="navbar-brand">Custom Hampers</a> 
        </div>
        <div class="navbar-collapse collapse" id="main-nav" style="height: 1px;">
          <ul class="nav navbar-nav">
            <li><a href="/customer/signup">SIGN ME UP</a></li>
            <li><%= link_to "Sign Up via Devise", new_producer_registration_path %></li>
            <li><a href="/producers">Producers</a></li>
            <li><a href="/customers">Customers</a></li>
            <li><a href="/products">products</a></li>
            <% if producer_signed_in? %>            
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"><%= current_producer.email %> <span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li class="dropdown-header">Producer Account</li>
                  <li class="dropdown-header"><%= current_producer.email %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Edit Profile", edit_producer_registration_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Sign Out", destroy_producer_session_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>            
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Log In <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Log in as Producer", new_producer_session_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Log in as Customer</a></li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>

    </div>

  </body>
</html>
