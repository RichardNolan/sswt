<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="card col-lg-8 col-lg-offset-2">
  <h2 class="card-header">Sign up as a Producer</h2>
  <div class="card-body">
    <%= devise_error_messages! %>
    
    <div class="row">
      <div class="col-sm-12">

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address - used for log-in' %>
        </div>


        <div class="row">
          <div class="col-sm-6 form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: (@minimum_password_length? "#{@minimum_password_length} characters minimum": 'Password')  %>
          </div>            
          <div class="col-sm-6 form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: 'Confirm your password' %>
          </div>
        </div>
          
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Your Company Name', :required => true %>
        </div> 

        <div class="row">
          <div class="col-sm-4 form-group">
            <%= f.label :address %>
            <%= f.text_field :address, class: 'form-control', placeholder: 'Address Line 1', :required => true %>
          </div>

          <div class="col-sm-4 form-group">
            <%= f.label :address2 %>
            <%= f.text_field :address2, class: 'form-control', placeholder: 'Address Line 2' %>
          </div> 

          <div class="col-sm-4 form-group">
            <%= f.label :county %>
            <%= select_tag "county_id", options_from_collection_for_select(countyList, "id", "name"), :include_blank => true, class: 'form-control', :required => true %>
          </div>    

        </div>

        <div class="form-group">
          <%= f.label "Telephone Number" %>
          <%= f.text_field :contact_phone, class: 'form-control', placeholder: 'Telephone Number', :required => true %>
        </div>

        <%= f.submit "Sign up", class: "btn btn-primary" %>
                
      </div>       

    </div>
  </div>
</div>

<% end %>