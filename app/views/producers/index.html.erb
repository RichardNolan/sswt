<h4 class="text-center">Producers</h4>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">

        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>                        
              <th>County</th>        
              <th>Status</th> 
              <th>Products</th>
              <th>Admin Tools</th>               
            </tr>
          </thead>
          <tbody>
            <% @producers.each do |producer| %>
            <tr>
              <td><%= producer.id %></td>
              <td><%= producer.name %></td>
              <td><%= producer.email %></td>
              <td><%= County.find(producer.county_id).name if producer.county_id %></td>        
              <td>
                <% if producer.enabled==true || producer.enabled==nil %>
                <span class="text-green">Enabled</span>
                <% else %>
                <span class="text-red">Disabled</span>
                <% end %>  
              </td>
              <td><%= producer.products.count %></td>
              <td>          
                <%= link_to 'Show', producer, class: 'btn btn-sm btn-primary' %>
              </td>
            </tr>      
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>

</div>